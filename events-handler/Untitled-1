
      - name: Setup AWS
        env:
          AWS_HOME: ${{ runner.temp }}/.aws
          AWS_CONFIG_FILE: ${{ runner.temp }}/.aws/config
          AWS_SHARED_CREDENTIALS_FILE: ${{ runner.temp }}/.aws/credentials
        run: |
          # Set the PATH to include our binaries
          mkdir -p "${HOME}/.local/bin"
          echo "$HOME/.local/bin" >> $GITHUB_PATH
          echo "name=PATH" >> $PATH
          # Configure AWS
          mkdir -p "${AWS_HOME}"
          echo "name=AWS_CONFIG_FILE" >> $AWS_CONFIG_FILE
          echo "name=AWS_SHARED_CREDENTIALS_FILE" >> $AWS_SHARED_CREDENTIALS_FILE
          aws configure --profile valence set default.region ${{ secrets.AWS_REGION }}
          aws configure --profile valence set default.output json
          aws configure --profile valence set aws_access_key_id ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws configure --profile valence set aws_secret_access_key ${{ secrets.AWS_SECRET_ACCESS_KEY }}